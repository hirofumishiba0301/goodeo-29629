<%= render "shared/header" %>
  <div class="video-contents">
      <div class="video-left">
        <div class="video-left-titlefield">
        <h2 class="items-sell-title"># 投稿動画プレビュー</h2>
        </div>
        <div class="video-left-previewfield", id="preview-field"></div>
      </div>
      <div class="items-sell-main">
        <h2 class="items-sell-title"># サムネイルの情報を入力</h2>
        <%= form_with model: @thumbnail, url: video_thumbnail_path, method: :patch, local: true do |f| %>

        <%=render 'shared/error_messages', model: f.object %>

        <%# サムネ画像 %>
        <div class="img-upload">
          <div class="weight-bold-text">
            サムネイル画像
            <span class="indispensable">必須</span>
          </div>
          <div class="click-upload">
            <p>
              クリックしてファイルをアップロード
            </p>
            <%= f.file_field :poster, id:"video-poster" %>
          </div>
        </div>
        <%# /サムネ画像 %>

        <%# 下部ボタン %>
        <div class="sell-btn-contents">
          <%= f.submit "作成する" ,class:"sell-btn" %>
          <%=link_to 'もどる', root_path, class:"back-btn" %>
        </div>
        <%# /下部ボタン %>
      </div>
      <% end %>
    </div>
  </div>
<%= render "shared/footer"%>