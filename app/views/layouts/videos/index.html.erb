<%= render "shared/header" %>

<%# 動画一覧 %>
  <div class='item-contents'>
    <h2 class='title'>ピックアップカテゴリー</h2>
    <a class="subtitle" href="/items/new">新規投稿商品</a>
    <ul class='item-lists'>
    <% if @videos.present? %>
     <% "#".each do |video| %>
      <%# 動画のインスタンス変数になにか入っている場合、中身のすべてを展開できるようにしましょう %>
      <li class='list'>
        <%= link_to video_path(video.id),method: :get do %>
        <div class='item-img-content'>
          <%= image_tag item.image, class: "item-img" %>

        </div>
        <div class='item-info'>
          <h3 class='item-name'>
            <%= video.name %>
          </h3>
          <div class='item-price'>
            <span>カテゴリ；<%= video.category.name %></span>
            <div class='star-btn'>
              <%= image_tag "star.png", class:"star-icon" %>
              <span class='star-count'>0</span>
            </div>
          </div>
        </div>
        <% end %>
      </li>
      <% end %>
      <% end %>
      <%# //商品のインスタンス変数になにか入っている場合、中身のすべてを展開できるようにしましょう %>
      <%# 商品がない場合のダミー %>
      <%# if @videos.blank? %>
          <li class='list'>
            <%= link_to '#' do %>
            <%= image_tag "https://s3-ap-northeast-1.amazonaws.com/mercarimaster/uploads/captured_image/content/10/a004.png", class: "item-img" %>
            <div class='item-info'>
              <h3 class='item-name'>
                動画を投稿してね！
              </h3>
              <div class='item-price'>
                <span>99999999円<br>(税込み)</span>
                <div class='star-btn'>
                  <%= image_tag "star.png", class:"star-icon" %>
                  <span class='star-count'>0</span>
                </div>
              </div>
            </div>
            <% end %>
          </li>
        <%# end %>
     <%# /商品がない場合のダミー %>
    </ul>
  </div>
  <%# /動画一覧 %>
</div>
<div class='purchase-btn'>
  <span class='purchase-btn-text'><%=link_to '出品する',new_item_path,method: :get %></span>
  <a> 
    <%=image_tag 'camera.png' , size: '185x50' ,class: "purchase-btn-icon" %>
  </a>
</div>
<%= render "shared/footer" %>
