<%= render "shared/header" %>

<%# 動画一覧 %>
  <div class='item-contents'>
    <h2 class='title'><a class="subtitle" href="/items/new">新規投稿動画</a></h2>
    
    <ul class='item-lists'>
    <% if @videos.present? %>
     <% "#".each do |video| %>
      <%# 動画のインスタンス変数になにか入っている場合、中身のすべてを展開できるようにしましょう %>
      <li class='list'>
        <%= link_to video_path(video.id),method: :get do %>
        <div class='item-img-content'>
          <%= image_tag video.image, class: "item-img" %>

        </div>
        <div class='item-info'>
          <h3 class='item-name'>
            <%= video.name %>
          </h3>
          <div class='item-price'>
            <span>カテゴリ；<%= video.category.name %></span>
            <div class='star-btn'>
              <%= image_tag "star.png", class:"star-icon" %>
              <span class='star-count'>0</span>
            </div>
          </div>
        </div>
        <% end %>
      </li>
      <% end %>
      <% end %>
      <%# //商品のインスタンス変数になにか入っている場合、中身のすべてを展開できるようにしましょう %>
      <%# 商品がない場合のダミー %>
      <%# if @videos.blank? %>
          <li class='list'>
            <%= link_to '#' do %>
            <%= image_tag "https://s3-ap-northeast-1.amazonaws.com/mercarimaster/uploads/captured_image/content/10/a004.png", class: "item-img" %>
            <div class='item-info'>
              <h3 class='item-name'>
                動画を投稿してね！
              </h3>
              <div class='item-price'>
                <span>99999999円<br>(税込み)</span>
                <div class='star-btn'>
                  <%= image_tag "star.png", class:"star-icon" %>
                  <span class='star-count'>0</span>
                </div>
              </div>
            </div>
            <% end %>
          </li>
        <%# end %>
     <%# /商品がない場合のダミー %>
    </ul>
  </div>
  <%# /動画一覧 %>
</div>
 <div class='nav'>
    <ul class='purchase-btn'>
        <% if user_signed_in? && current_user.id %>
          <li><%= link_to "投稿", new_video_path, method: :get , class: "purchase-btn-text"%> </li> 
          <li><%= link_to "Pli作成", new_playlist_path, method: :delete , class: "purchase-btn-text"%> </li> 
          <li><%= link_to "Pli一覧", new_playlist_path, method: :delete , class: "purchase-btn-text"%> </li> 
          <li><%= link_to image_tag("search.png", class: "search-button", id:"search-btn"), videos_path, method: :get %>
          <li><%= link_to "ログアウト", destroy_user_session_path, method: :delete , class: "purchase-btn-text"%> </li> 
        <% else %>
          <li><%= link_to 'ログイン', new_user_session_path,method: :get, class: "purchase-btn-text" %></li>
          <li><%= link_to '新規登録', new_user_registration_path,method: :get , class: "purchase-btn-text" %></li>
          <li><%= link_to image_tag("search.png", class: "search-button", id:"search-btn"), videos_path, method: :get %>
          </li> 
        <% end %>
    </ul>
  <div class='search-bar-contents'>
    <form class="search-form" action="#">
      <input class='input-box' placeholder='キーワードから探す'>
      <button class="search-button">
        <%= image_tag "search.png", class:"search-icon", id: "search-btn" %>
      </button>
    </form>
  </div>
  </div>
<%= render "shared/footer" %>
