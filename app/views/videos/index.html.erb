<%= render "shared/header" %>

<%# 動画一覧 %>
  <div class='newtopics-video-contents'>
    <h2 class='title'><a class="subtitle" href="/videos/new">新着オススメ動画</a></h2>
    
    <ul class='video-lists'>
      <% if @videos.present? %>
        <% @videos.each do |video| %>
          <li class='video-list'>
            <%= link_to video_path(video.id),method: :get do %>
            <div class='video-img-content'>
            <% if video.thumbnail.present? %>
              <%=video_tag rails_blob_path(video.movie), poster_skip_pipeline: video.thumbnail.poster, autoplay: true, muted: true, controls: true, loop: true %></video>
            <% elsif video.movie.attached? %>
              <%= video_tag rails_blob_path(video.movie), autoplay: true, muted: true, controls: true, loop: true %></video>
            <% end %>
            </div>
            <div class='video-info'>
              <h3 class='video-name'>
                <%= video.name %>
              </h3>
              <div class='video-category'>
                <span>カテゴリ；<%= video.category.name %></span>
              </div>
              </div>
            </div>
            <% end %>
          </li>
          <% end %>
        <% end %>
    </ul>
  </div>
  <%# /動画一覧 %>

<%# カテゴリ別動画一覧 %>
<div class='category-video-contents'>
  <h2 class='title'><a class="category-title">Music</a></h2> 
    <ul class='category-videos'>
    <% if @thumbnail.present? %>
     <% @videos.each do |video| %>
      <% if video.category.id == 3 %>
          <div class='category-video-lists'>
            <li class='category-video-list'>
              <%= link_to video_path(video.id),method: :get do %>
              <div class='item-img-content'>
                <%= image_tag video.thumbnail.poster, class: "item-img" %>
              </div>
              <div class='item-info'>
                <h3 class='item-name'>
                  <%= video.name %>
                </h3>
                <div class='item-price'>
                  <span>Good job!<%= video.info %></span>
                  </div>
                </div>
              </div>
              <% end %>
            </li>
          </div>
       <% end %>
      <% end %>
    <% end %>
    </ul>
  </div>
  <%# /カテゴリ別動画一覧 %>

